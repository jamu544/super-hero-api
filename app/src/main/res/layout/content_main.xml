<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">



     <androidx.cardview.widget.CardView
         app:cardElevation="10dp"
         android:id="@+id/image_card"
         app:cardBackgroundColor="@color/purple_700"
         app:cardCornerRadius="15dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:orientation="vertical">

     <ImageView
        android:id="@+id/profilePhoto"
        android:layout_marginTop="24dp"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:background="#999"
        android:src="@drawable/batman_ben_affleck"

        />
             <TextView
                 android:id="@+id/nameID"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Batman"
                 android:layout_gravity="bottom|center_horizontal"
                 android:layout_marginTop="20dp"
                 android:layout_marginBottom="20dp"
                 android:textSize="32sp"
                 android:textColor="#ffffff"
                 android:textStyle="bold"
                 />
         </LinearLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="20dp"
         android:layout_marginEnd="20dp"
         app:cardCornerRadius="8dp"
         android:layout_alignParentBottom="true"
         android:layout_below="@id/image_card"
         android:layout_marginTop="20dp"
         android:layout_marginBottom="40dp"
         app:cardBackgroundColor="@color/purple_700"
       >
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_margin="20dp"
             android:layout_height="match_parent">
         <LinearLayout android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:id="@+id/firstRow">
             <TextView
             android:id="@+id/intelligence_id"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginEnd="20dp"
             android:gravity="start"
             android:text="INTELLIGENCE 50"
             android:textStyle="bold"
                 android:textColor="#ffffff"
              />
             <TextView
                 android:id="@+id/strength_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="STRENGTH"
                 android:textColor="#ffffff"
                 android:textAlignment="center"
                 android:layout_marginEnd="20dp"
                 android:textStyle="bold"
                 />
             <TextView
                 android:id="@+id/speed_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="SPEED 30"
                 android:textColor="#ffffff"
                 android:layout_marginEnd="20dp"
                 android:gravity="right"
                 android:textStyle="bold"
                 />
         </LinearLayout>

         <LinearLayout android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:id="@+id/secondRow"
             android:layout_margin="20dp"
             >

             <TextView
                 android:id="@+id/durability_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="20dp"
                 android:gravity="start"
                 android:text="DURABILITY 96"
                 android:textAlignment="viewStart"
                 android:textColor="#ffffff"
                 android:textStyle="bold"

                 />

             <TextView
                 android:id="@+id/power_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="POWER 63"
                 android:textColor="#ffffff"
                 android:textAlignment="center"
                 android:layout_marginEnd="20dp"
                 android:textStyle="bold"
                 />
             <TextView
                 android:id="@+id/combat_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="COMBAT 36"
                 android:textColor="#ffffff"
                 android:layout_marginEnd="20dp"
                 android:gravity="right"
                 android:textStyle="bold"
                 />

         </LinearLayout>

         </LinearLayout>

     </androidx.cardview.widget.CardView>











    </RelativeLayout>
</ScrollView>